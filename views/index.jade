extends layout

block content
  h1 #{title}

  if (login)
    if currentGame && currentGame.weekNumber === 1
      a(href="/picks/new") New Pick
    if picksInCurrent.length > 0
      each pick in picksInCurrent
        a(href="/picks/#{pick.id}") New Pick


    br
    br
    each pick in picks
      li You chose #{pick.teamChoice}
        if pick.hasPaid
          p you have paid
        else
          p you have not paid

  else
    p display the teams here
  
